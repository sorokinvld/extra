{
  "buildCommand": "pip install --disable-pip-version-check --target . werkzeug==1.0.1",
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "api/main.py" }],
  "env": {
    "FLASK_APP": "api/main.py",
    "FLASK_ENV": "production"
  },
  "dependencies": {
    "flask": "^2.3.2",
    "werkzeug": "2.3.4"
  },
  "install": {
    "maxDuration": 300,
    "ignoreBuildWarnings": true,
    "alwaysInstall": true,
    "additionalArgs": ["-r", "requirements.txt"]
  }
}
