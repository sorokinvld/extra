{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "api/main.py" }],
  "env": {
    "FLASK_APP": "api/main.py",
    "FLASK_ENV": "production"
  },
  "build": {
    "commands": [
      "pip install --upgrade pip",
      "pip install --no-cache-dir --disable-pip-version-check -r requirements.txt -t ."
    ]
  }
}
